#!/bin/bash   
rm SST.txt
find ./FHEM -type f \( ! -iname ".*" \) -print0 | while IFS= read -r -d '' f; 
  do
   echo "DEL ${f}" >> SST.txt
   out="UPD "$(stat -f "%Sm" -t "%Y-%m-%d_%T" $f)" "$(stat -f%z $f)" ${f}"
   echo ${out//.\//} >> SST.txt
done

# update CHANGED file
$(
	echo "FHEM SST last changes:" > CHANGED
	date +%F >> CHANGED
	echo " - $(git log -1 --pretty=%B)" >> CHANGED
) \
    | tee -a CHANGE_HISTORY
    >CHANGED 
