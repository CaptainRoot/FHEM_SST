#!/bin/bash   
allfiles=''
while read newfile ; do
	echo "DEL ${newfile}"
	echo "UPD $( date -r ${newfile} +%F_%T ) $( stat -c %s ${newfile} ) ${newfile}"
	allfiles="${allfiles} ${newfile}"
done < <( find ./FHEM/ ./images/ -type f ) >SST.txt

# update CHANGED file
echo -e "FHEM SST last changes:\$( date +%F )\n$( git log --graph --format='%s' ${allfiles} )" | tee -a HISTORY >CHANGED 
